<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.medical_records.MedicalRecordsDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_doctor"
            style="@style/EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_name"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_doctor" />

        <TextView
            android:id="@+id/label_temp"
            style="@style/DefaultLabel"
            android:text="@string/label_temp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/text_name"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            app:layout_constraintVertical_bias="0.015" />

        <TextView
            android:id="@+id/label_sex"
            style="@style/DefaultLabel"
            android:layout_marginStart="36dp"
            android:text="@string/label_sex"
            app:layout_constraintBottom_toBottomOf="@+id/label_temp"
            app:layout_constraintStart_toEndOf="@+id/text_temp"
            app:layout_constraintTop_toTopOf="@+id/label_temp"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/label_ta"
            style="@style/DefaultLabel"
            android:text="@string/label_ta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_temp"
            app:layout_constraintTop_toBottomOf="@+id/label_temp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_fc"
            style="@style/DefaultLabel"
            android:text="@string/label_fc"
            app:layout_constraintBottom_toBottomOf="@+id/label_ta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_sex"
            app:layout_constraintTop_toTopOf="@+id/label_ta"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/label_fr"
            style="@style/DefaultLabel"
            android:text="@string/label_fr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_ta"
            app:layout_constraintTop_toBottomOf="@+id/label_ta"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/label_bmi"
            style="@style/DefaultLabel"
            android:text="@string/label_bmi"
            app:layout_constraintBottom_toBottomOf="@+id/label_fr"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_fc"
            app:layout_constraintTop_toTopOf="@+id/label_fr"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/label_weight"
            style="@style/DefaultLabel"
            android:text="@string/label_weight"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_fr"
            app:layout_constraintTop_toBottomOf="@+id/label_fr"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/label_height"
            style="@style/DefaultLabel"
            android:text="@string/label_height"
            app:layout_constraintBottom_toBottomOf="@+id/label_weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_sex"
            app:layout_constraintTop_toTopOf="@+id/label_weight"
            app:layout_constraintVertical_bias="1.0" />


        <EditText
            android:id="@+id/text_temp"
            style="@style/EditText"
            android:layout_marginStart="16dp"
            android:numeric="decimal"
            app:layout_constraintBottom_toBottomOf="@+id/label_temp"
            app:layout_constraintStart_toEndOf="@+id/label_temp"
            app:layout_constraintTop_toTopOf="@+id/label_temp"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_sex"
            style="@style/EditText"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/label_sex"
            app:layout_constraintStart_toEndOf="@+id/label_sex"
            app:layout_constraintTop_toTopOf="@+id/label_sex"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_ta"
            style="@style/EditText"
            app:layout_constraintBottom_toBottomOf="@+id/label_ta"
            app:layout_constraintStart_toStartOf="@+id/text_temp"
            app:layout_constraintTop_toTopOf="@+id/label_ta"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_fc"
            style="@style/EditText"
            app:layout_constraintBottom_toBottomOf="@+id/label_fc"
            app:layout_constraintStart_toStartOf="@+id/text_sex"
            app:layout_constraintTop_toTopOf="@+id/label_fc"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_fr"
            style="@style/EditText"
            app:layout_constraintBottom_toBottomOf="@+id/label_fr"
            app:layout_constraintStart_toStartOf="@+id/text_temp"
            app:layout_constraintTop_toTopOf="@+id/label_fr"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_bmi"
            style="@style/EditText"
            android:numeric="decimal"
            app:layout_constraintBottom_toBottomOf="@+id/label_bmi"
            app:layout_constraintStart_toStartOf="@+id/text_sex"
            app:layout_constraintTop_toTopOf="@+id/label_bmi"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_weight"
            style="@style/EditText"
            android:numeric="decimal"
            app:layout_constraintBottom_toBottomOf="@+id/label_weight"
            app:layout_constraintStart_toStartOf="@+id/text_temp"
            app:layout_constraintTop_toTopOf="@+id/label_weight"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_height"
            style="@style/EditText"
            android:numeric="decimal"
            app:layout_constraintBottom_toBottomOf="@+id/label_height"
            app:layout_constraintStart_toStartOf="@+id/text_sex"
            app:layout_constraintTop_toTopOf="@+id/label_height"
            app:layout_constraintVertical_bias="0.7" />

        <EditText
            android:id="@+id/text_observations"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="start|top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_observations"
            app:layout_constraintTop_toBottomOf="@+id/label_observations" />

        <EditText
            android:id="@+id/text_diagnosis"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:gravity="start|top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/label_diagnosis"
            app:layout_constraintTop_toBottomOf="@+id/label_diagnosis" />

        <RelativeLayout
            android:id="@+id/prescription_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_prescriptions">

            <include layout="@layout/prescription_header" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_prescriptions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/label_prescriptions"
            app:layout_constraintTop_toBottomOf="@+id/prescription_header">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_prescriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin" />
        </RelativeLayout>

        <TextView
            android:id="@+id/label_observations"
            style="@style/DefaultLabel"
            android:text="@string/label_observations"
            app:layout_constraintStart_toStartOf="@+id/label_weight"
            app:layout_constraintTop_toBottomOf="@+id/text_weight" />

        <TextView
            android:id="@+id/label_diagnosis"
            style="@style/DefaultLabel"
            android:text="@string/label_diagnosis"
            app:layout_constraintStart_toStartOf="@+id/label_observations"
            app:layout_constraintTop_toBottomOf="@+id/text_observations" />

        <TextView
            android:id="@+id/label_prescriptions"
            style="@style/DefaultLabel"
            android:text="@string/label_prescription"
            app:layout_constraintStart_toStartOf="@+id/text_diagnosis"
            app:layout_constraintTop_toBottomOf="@+id/text_diagnosis" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prescription_date_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:insetLeft="0dp"
            android:textSize="12sp"
            android:theme="@style/Widget.MaterialComponents.Button.TextButton"
            app:icon="@drawable/ic_calendar_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="#8A8A8A"
            app:layout_constraintBottom_toBottomOf="@+id/add_prescription"
            app:layout_constraintEnd_toStartOf="@+id/add_prescription"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prescription_dose"
            app:layout_constraintTop_toTopOf="@+id/add_prescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_add"
            android:textSize="12sp"
            android:theme="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prescription_date_button"
            app:layout_constraintTop_toBottomOf="@id/list_prescriptions_container" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/prescription_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prescription_name"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/prescription_dose"
            app:layout_constraintEnd_toStartOf="@+id/prescription_dose"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/prescription_dose"
            tools:text="@string/prescription_name" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/prescription_dose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/prescription_dose"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/prescription_date_button"
            app:layout_constraintEnd_toStartOf="@+id/prescription_date_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/prescription_name"
            app:layout_constraintTop_toTopOf="@+id/prescription_date_button"
            tools:text="@string/prescription_dose" />

        <Button
            android:id="@+id/save_btn"
            style="@style/DefaultButtons"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:padding="16dp"
            android:text="@string/save"
            android:textColor="@color/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/prescription_dose"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>